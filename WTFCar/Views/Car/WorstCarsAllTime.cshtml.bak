			document.location.href = "/Car/WorstCarsAllTime/1/points/" + arrValues[0] + "/" + arrValues[1];
		}
		else{
			document.location.href = "/Car/WorstCarsAllTime/1/year/" + arrValues[0] + "/" + arrValues[1];
		}

		
	}

</script>


